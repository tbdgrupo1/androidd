<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    android:weightSum="1"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:clickable="true"
    android:rowOrderPreserved="false">
   <!-- android:textAlignment="center"-->




 <ScrollView
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:id="@+id/scrollView">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="fill_parent"

      android:background="#f0ebeb"
      android:weightSum="1"
      android:gravity="center"
      android:baselineAligned="false"
      android:clickable="false"
      android:orientation="vertical">
   <EditText
       android:layout_width="354dp"
       android:layout_height="53dp"
       android:id="@+id/TextViewTitulo"
       android:layout_marginTop="37dp"
       android:layout_alignParentTop="true"
       android:layout_marginRight="15dp"
       android:layout_alignLeft="@+id/TextViewCuerpo"
       android:layout_alignStart="@+id/TextViewCuerpo"
       android:background="#FFFFFFFF"
       android:layout_marginLeft="15dp"
       android:inputType="text"
       android:textSize="33dp"
       android:text="Titulo Actividad"
       android:textStyle="bold"
       android:contextClickable="false"
       android:autoText="false"
       android:typeface="sans"
       android:paddingLeft="15dp"
       android:textColor="#3160a7"
       android:translationZ="7dp"
       android:gravity="center|left"
       android:layout_gravity="center_vertical" />

   <EditText
       android:layout_width="354dp"
       android:layout_height="130dp"
       android:id="@+id/TextViewCuerpo"
       android:layout_marginTop="23dp"
       android:layout_below="@+id/TextViewTitulo"
       android:background="#FFFFFF"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_marginLeft="15dp"
       android:layout_gravity="center_vertical"
       android:text="cuerpo"
       android:paddingLeft="20dp"
       android:textColor="#142b4d"
       android:editable="false"
       android:typeface="sans"
       android:textSize="20dp"
       android:translationZ="7dp"
       android:layout_marginRight="15dp"
       android:gravity="center|fill|left" />

   <EditText
       android:layout_width="354dp"
       android:layout_height="130dp"
       android:id="@+id/TextViewRequisitos"
       android:layout_marginTop="15dp"
       android:layout_below="@+id/TextViewCuerpo"
       android:background="#FFFFFF"
       android:layout_toRightOf="@+id/TextViewCuerpo"
       android:layout_toEndOf="@+id/TextViewCuerpo"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:text="requerimientos"
       android:paddingLeft="20dp"
       android:textColor="#142b4d"
       android:layout_marginBottom="20dp"
       android:typeface="sans"
       android:textSize="20dp"
       android:translationZ="7dp"
       android:gravity="center|left"
       android:layout_gravity="center_vertical" />

  </LinearLayout>
 </ScrollView>

 <Button
     android:layout_width="fill_parent"
     android:layout_height="105dp"
     android:id="@+id/botonPC"
     android:layout_row="7"
     android:layout_column="0"
     android:gravity="bottom"
     android:layout_marginLeft="0dp"
     android:layout_marginRight="0dp"
     android:layout_marginBottom="0dp"
     android:textStyle="bold"
     android:textSize="35dp"
     android:textColor="#ffffff"
     android:background="#03a649"
     android:allowUndo="false"
     android:textAlignment="center"
     android:typeface="sans"
     android:visibility="visible"
     android:text="CANCELAR PARTICIPACIOn"
     android:singleLine="false"
     android:paddingTop="15dp"
     android:outlineProvider="paddedBounds"
     android:paddingBottom="15dp"
     android:translationZ="50dp"
     android:clickable="true"
     android:onClick="onClick" />

</LinearLayout>